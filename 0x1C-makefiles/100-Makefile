CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic
HEADER = "m.h"

check:
	@if [ ! -e $(HEADER) ]; then \
		exit; \
	fi
all : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

.PHONY: clean oclean fclean re

clean :
	$(RM) *~ $(NAME)

oclean :
	$(RM) -f $(OBJ)

fclean : clean oclean

re : oclean all
